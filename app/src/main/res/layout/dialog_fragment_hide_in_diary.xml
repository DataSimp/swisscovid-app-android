<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<ImageButton
		android:id="@+id/checkin_remove_close_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end"
		android:contentDescription="@string/cancel"
		android:background="?android:selectableItemBackground"
		android:padding="@dimen/spacing_medium_large"
		android:src="@drawable/ic_close"
		android:tint="@color/blue_main" />

	<TextView
		style="@style/NextStep.Text.Title.Dark.Huge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/spacing_very_small"
		android:layout_marginBottom="@dimen/spacing_medium_large"
		android:gravity="start"
		android:paddingHorizontal="@dimen/spacing_larger"
		android:text="@string/remove_diary_warning_title" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingHorizontal="@dimen/spacing_larger"
			android:paddingVertical="@dimen/spacing_large">

			<TextView
				style="@style/NextStep.Text.Bold.Blue"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/spacing_medium_large"
				android:text="@string/remove_diary_warning_hide_title" />

			<TextView
				style="@style/NextStep.Text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/spacing_larger"
				android:text="@string/remove_diary_warning_hide_text" />

			<Button
				android:id="@+id/checkin_remove_hide_button"
				style="@style/NextStep.Button.Blue"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/spacing_huge"
				android:drawableEnd="@drawable/ic_visibility_off"
				android:text="@string/remove_diary_warning_hide_button" />

			<TextView
				style="@style/NextStep.Text.Bold"
				android:layout_width="match_parent"
				android:layout_marginBottom="@dimen/spacing_medium_large"
				android:layout_height="wrap_content"
				android:text="@string/remove_diary_remove_now_title" />

			<TextView
				style="@style/NextStep.Text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/spacing_large"
				android:text="@string/remove_diary_remove_now_text" />

			<Button
				android:id="@+id/checkin_remove_nuke_button"
				style="@style/NextStep.Button.Transparent.Dark"
				android:layout_gravity="center_horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/spacing_larger"
				android:gravity="center"
				android:padding="@dimen/spacing_small"
				android:text="@string/remove_diary_remove_now_button" />

		</LinearLayout>

	</ScrollView>

</LinearLayout>
